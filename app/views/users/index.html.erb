<div class="row justify-content-center align-items-center mb-4">
  <div class="col-2 row">
    <div class="col-md-12 p-0">
      <div class="h3">Пользователи</div>
      <div class="h6">Всего - <%= User.count %></div>
      <%# link_to '<span class="oi oi-trash"></span>'.html_safe, delete_selected_citilinks_path, class: 'btn btn-secondary btn-sm', id: 'deleteAll', remote: true, data: { delete_url: delete_selected_citilinks_path } %>
    </div>
  </div>
  <div class="col-10 pl-0 pr-0 row">
  <%= search_form_for @search, {class: 'form-inline col-6 pl-0 pr-0'} do |f| %>
    <div class="input-group input-group-sm">
      <%= f.search_field :name_cont_all , placeholder: 'name', class: "form-control", style: "max-width: 180px;" %>
      <%= button_tag(type: 'submit', :class => "btn btn-info") do %>
        <span class="oi oi-magnifying-glass"></span>
      <% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, users_path, class: 'btn btn-outline-dark ' %>
    </div>
  <% end %>
</div>
</div>

<div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
  <table class="table table-hover table-condensed">
    <thead>
      <tr class="text-secondary">
        <th>ID</th>
        <th>Имя</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Роль</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="items_table" class="border-0">
      <% @users.each do |user| %>
        <tr>
          <%= render user %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="apple_pagination">
<%= will_paginate @users %>
</div>
